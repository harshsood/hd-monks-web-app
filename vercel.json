{
  "version": 2,
  "buildCommand": "npm --prefix frontend install --legacy-peer-deps && npm --prefix frontend run build",
  "outputDirectory": "frontend/build",
  "env": {
    "REACT_APP_BACKEND_URL": {
      "description": "Backend API URL for the React application",
      "default": "https://your-backend-url.com"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- frontend/ || exit 0"
}
